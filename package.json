{
  "name": "rdm",
  "version": "0.0.3",
  "description": "Markdown partial generator (readme)",
  "author": "muji <noop@xpm.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/freeformsystems/rdm"
  },
  "bugs": {
    "url": "https://github.com/freeformsystems/rdm/issues",
    "email": "muji <noop@xpm.io>"
  },
  "licenses": [{
    "type": "MIT",
    "url": "https://github.com/freeformsystems/rdm/blob/master/LICENSE"
  }],
  "keywords": [
    "cli",
    "readme",
    "partial"
  ],
  "dependencies": {
    "async": "~0.2.10",
    "cli-interface": "~1.0.5",
    "cli-util": "~1.1.11",
    "marked": "~0.3.1"
  },
  "devDependencies": {
    "mocha": "~1.17.0",
    "chai": "~1.9.0",
    "istanbul": "~0.2.4"
  },
  "engine": [ "node >= 0.10.21" ],
  "scripts": {
    "prepublish": "./bin/rdm --force",
    "test": "istanbul cover _mocha -- -u bdd --recursive --bail --reporter list -A test/unit/"
  },
  "files": {
    "bin": "./bin"
  },
  "readme" : {
    "title": "rdm(1)",
    "pedantic": true,
    "includes": "readme",
    "links": "links.md",
    "toc": "Table of Contents",
    "base": "https://github.com/freeformsystems/rdm",
    "partial": [
      {
        "property": "description"
      },
      {
        "include": "introduction.md"
      },
      {
        "include": "install.md"
      },
      {
        "include": "test.md"
      },
      "## Configuration\n\nThis document was generated with the following configuration:",
      {
        "property": "readme",
        "stringify": true,
        "format": "```json\n%s\n```"
      },
      "## Usage",
      {
        "script": "rdm --help",
        "type": "pre"
      },
      "## Manual",
      {
        "env": {
          "cli_toolkit_help_style": "markdown",
          "cli_toolkit_help_markdown_title": true,
          "cli_toolkit_help_markdown_header": "###"
        },
        "script": "rdm --help",
        "pedantic": false
      },
      {
        "include": "license.md"
      },
      {
        "comment": "Includes path is set to *readme* so drop down a directory",
        "include": "../LICENSE"
      }
    ]
  }
}
